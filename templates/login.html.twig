{% extends "base.html.twig" %}
{% block title %}Blog | Connexion{% endblock %}
{% block content %}
    <section id="loginSection">
        <h1>Connexion</h1>
        {% include 'messages.html.twig' %}
        <div>
            <form method="post" action="../public/index.php?route=login">
                <div class="form-group">
                    <label for="pseudo">Pseudo *</label>
                    <input type="text" class="form-control" id="pseudo" name="pseudo">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe *</label><br/>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <p>Les champs marqués d'une * sont obligatoires</p>
                <input type="submit" value="Connexion" id="submit" name="submit" class="btn btn-success" />
            </form>
            <br/>
            <p>
                <a href="../public/index.php?route=homeBlog"><button class="btn btn-secondary">Retour à l'accueil</button></a>
            </p>
        </div>
    </section>
{% endblock %}